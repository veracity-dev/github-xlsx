{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
